@model WebAppFrontend.Models.Order

<div class="modal fade" id="addOrderModal" tabindex="-1" role="dialog" aria-labelledby="addOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addOrderModalLabel">Add New Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" asp-controller="Order" asp-action="Create">
                    <div class="form-group">
                        <label asp-for="OrderDate">Order Date</label>
                        <input type="date" class="form-control" asp-for="OrderDate" value="" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Region">Region</label>
                        <input type="text" class="form-control" asp-for="Region" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="City">City</label>
                        <input type="text" class="form-control" asp-for="City" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Category</label>
                        <input type="text" class="form-control" asp-for="Category" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Product">Product</label>
                        <input type="text" class="form-control" asp-for="Product" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity">Quantity</label>
                        <input type="number" class="form-control" asp-for="Quantity" value="" min="1" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitPrice">Unit Price</label>
                        <input type="number" step="0.01" class="form-control" asp-for="UnitPrice" value="" min="0.01" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Order</button>
                </form>
            </div>
        </div>
    </div>
</div>
